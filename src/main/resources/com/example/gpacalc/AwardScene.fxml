<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 25; -fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gpacalc.AwardController">


    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Total Credit:" />
        <Label fx:id="totalCreditLabel" style="-fx-font-size: 20px;" />
    </HBox>

    <!-- Dynamic container for COURSES -->
    <VBox fx:id="courseContainer" alignment="TOP_LEFT" spacing="25" style="-fx-padding: 10; -fx-background-color: #f7f7f7; -fx-border-color: black;" />

    <!-- TOTAL GPA -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Total:" />
        <Label fx:id="totalGPALabel" style="-fx-font-size: 20px;" />
    </HBox>

    <Button onAction="#goBack" style="-fx-padding: 10 20; -fx-font-size: 16px;" text="Back" />

</VBox>
